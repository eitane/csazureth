{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "allowedValues": [
        "East US",
        "West US",
        "North Central US",
        "South Central US",
        "Central US",
        "West Europe",
        "North Europe",
        "East Asia",
        "South East Asia",
        "Australia Southeast",
        "Australia East",
        "Japan West",
        "Japan East"
      ],
      "metadata": {
        "description": "Deployment location"
      }
    },
    "appEnv": {
      "type": "string",
      "metadata": {
        "description": "Environment, ususally the resrouce group name."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "proxyDNSName": {
      "type": "string",
      "metadata": {
        "description": "DNS name for the proxy"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "proxyVmNamePrefix": {
      "defaultValue": "csproxy",
      "metadata": {
        "description": "Prefix for the name of Proxy servers"
      },
      "type": "string"
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D2",
      "metadata": {
        "description": "Size of the VM"
      }
    },
    "sizeOfEachDataDiskInGB": {
      "type": "string",
      "defaultValue": "50",
      "metadata": {
        "description": "Size of the VM Data disk"
      }
    },
    "publicIPAddressType": {
      "type": "string",
      "defaultValue": "Dynamic",
      "allowedValues": [
        "Dynamic",
        "Static"
      ],
      "metadata": {
        "description": "Type of public IP address"
      }
    },
    "proxyServersPublicIPPrefix": {
      "type": "string",
      "defaultValue": "proxyserverpubIP",
      "metadata": {
        "description": "Prefix for the name of Proxy Servers"
      }
    },
    "skuName": {
      "type": "string",
      "allowedValues": [
        "Standard_Small",
        "Standard_Medium",
        "Standard_Large"
      ],
      "defaultValue": "Standard_Small",
      "metadata": {
        "description": "Sku Name"
      }
    },
    "linuxOSVersion": {
      "type": "string",
      "defaultValue": "7.1",
      "allowedValues": [
        "6.7",
        "7.0",
        "7.1",
        "7.2"
      ],
      "metadata": {
        "description": "The Linux version for the VM. This will pick a fully patched image of this given Windows version. Allowed values: 2008-R2-SP1, 2012-Datacenter, 2012-R2-Datacenter."
      }
    },
    "proxyScaleCount": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Number of proxy servers"
      }
    },
    "subnet": {
      "type": "object",
      "metadata": {
        "description": "The subnet for this vm"
      }
    }
  },
  "variables": {
    "apiVer": "2015-06-15",
    "AppPrefix": "10.1.2.0/24",
    "imageOffer": "CentOS",
    "imagePublisher": "OpenLogic",
    "OSDiskName": "osdisklinux",
    "proxyAvailabilitySetName": "proxyAvSet",
    "proxyNicName": "proxyNic",
    "ProxyNsgname": "ProxyNSG",
    "ProxyPrefix": "10.1.1.0/24",
    "ProxyServerIP1": "10.1.1.4",
    "ProxyServerIP2": "10.1.1.5",
    "ProxySubnetName": "ProxySubnet",
    "ProxySubnetRef": "[concat(variables('vnetID'),'/subnets/', parameters('subnet').name)]",
    "storageAccountType": "Standard_LRS",
    "newAppStorageAccountName": "csappstorage",
    "newDBStorageAccountName": "csdbappstorage",
    "newElasticStorageAccountName": "cselasticstorage",
    "vmSize": "Standard_D2",
    "vmStorageAccountContainerName": "vhds",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('VNetName'))]",
    "VNetName": "DEVVNET"
  },
  "resources": [
    {
      "apiVersion": "[variables('apiVer')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[concat(parameters('appenv'), replace(parameters('location'),' ','_'), parameters('proxyServersPublicIPPrefix'),copyIndex())]",
      "location": "[parameters('location')]",
      "copy": {
        "name": "iploop",
        "count": "[parameters('proxyScaleCount')]"
      },
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIPAddressType')]",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('uniqueDnsName'),'-proxy',copyIndex())]"
        }
      }
    }
  ]
}
